            "COCO.TRAIN.BATCH_SIZE_PER_GPU", "1",
            "SHAREGPT.TRAIN.BATCH_SIZE_TOTAL", "2",
            "SHAREGPT.TRAIN.BATCH_SIZE_PER_GPU", "2",
            "REF.TEST.BATCH_SIZE_TOTAL", "1",
            "VQA.TEST.BATCH_SIZE_TOTAL", "1", 
